# prevent history expansion for this shell
set +H

# append rules that allow files inside outputs/models/** to be tracked
{
  echo ""
  echo "# keep data & other outputs ignored"
  echo "data/"
  echo "outputs/"
  echo ".kaggle/"
  echo "# but allow all model artifacts to be tracked"
  echo "!outputs/models/"
  echo "!outputs/models/**"
} >> .gitignore

# confirm
tail -n 12 .gitignore
